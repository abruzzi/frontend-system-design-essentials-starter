    "@tailwindcss/vite": "^4.1.11",
    "@types/dompurify": "^3.2.0",
    "dompurify": "^3.3.0",
    "lucide-react": "^0.540.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-select": "^5.10.2",
    "tailwindcss": "^4.1.11"
